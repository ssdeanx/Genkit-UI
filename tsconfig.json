{
  "compilerOptions": {
    "rootDir": ".",
    "module": "NodeNext",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "allowUnionTypes": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "exclude": [
      "node_modules",
      "dist",
      "test",
      "scripts",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.d.ts",
      "**/__tests__",
      "**/__mocks__",
      ".genkit"
    ],
  }
}