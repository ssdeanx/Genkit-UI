{
  "compilerOptions": {
    "rootDir": ".",
    "module": "NodeNext",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "outDir": "lib",
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.js",
    "prettier.config.js",
    "genkit.config.ts",
    "functions/**/*.ts",
    "apphosting.yaml",
    "firebase.json",
    "main/**/*.ts",
    "tests/**/*.ts",
    "src/**/*__tests__/*.ts",
    "vitest.setup.ts",
    "functions/.eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".github",
    "lib",
    "scripts",
    "templates",
    "/functions/node_modules",
    "/functions/lib"
  ]
}